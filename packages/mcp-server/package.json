{
  "name": "mermaid-converter-mcp-server",
  "version": "1.0.0",
  "description": "Enhanced MCP server for advanced Markdown + Mermaid conversion with batch processing and templates",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mermaid-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:basic": "node test-basic.cjs",
    "test:integration": "node test-integration.cjs",
    "test:performance": "node test-performance.cjs",
    "test:docker": "node test-docker.cjs",
    "test:all": "node run-all-tests.cjs",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "docker:build": "docker build -t mermaid-converter/mcp-server .",
    "docker:run": "docker run -p 3000:3000 mermaid-converter/mcp-server",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "mermaid",
    "markdown",
    "pdf",
    "batch-processing",
    "templates",
    "documentation"
  ],
  "author": "John Costa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/costajohnt/mermaid-to-pdf-vscode.git",
    "directory": "packages/mcp-server"
  },
  "homepage": "https://github.com/costajohnt/mermaid-to-pdf-vscode/tree/main/packages/mcp-server",
  "bugs": {
    "url": "https://github.com/costajohnt/mermaid-to-pdf-vscode/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "simple-index.js",
    "server.cjs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "mermaid-converter-core": "^1.0.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "node-cron": "^3.0.3",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}