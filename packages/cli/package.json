{
  "name": "@mermaid-converter/cli",
  "version": "1.0.0",
  "description": "Command-line tool for converting Markdown with Mermaid diagrams to various formats",
  "bin": {
    "mermaid-convert": "./dist/index.js"
  },
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "mermaid",
    "markdown",
    "pdf",
    "converter",
    "cli",
    "documentation",
    "diagrams"
  ],
  "author": "John Costa",
  "license": "MIT",
  "dependencies": {
    "@mermaid-converter/core": "file:../core",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "glob": "^10.3.10",
    "chokidar": "^3.5.3",
    "inquirer": "^9.2.12",
    "cli-progress": "^3.12.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "cosmiconfig": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/inquirer": "^9.0.7",
    "@types/cli-progress": "^3.11.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}