{
  "name": "@mermaid-converter/core",
  "version": "1.0.0",
  "description": "Core library for converting Markdown with Mermaid diagrams to various formats",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "markdown",
    "mermaid",
    "pdf",
    "converter",
    "documentation",
    "diagrams"
  ],
  "author": "John Costa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/costajohnt/mermaid-to-pdf-vscode",
    "directory": "packages/core"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "marked": "^11.0.0",
    "puppeteer": "^23.0.2",
    "googleapis": "^144.0.0",
    "google-auth-library": "^9.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}