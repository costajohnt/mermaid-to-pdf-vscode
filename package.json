{
  "name": "mermaid-to-pdf-cli",
  "description": "CLI tool to convert Markdown files with Mermaid diagrams to PDF",
  "version": "1.0.0",
  "author": "Mermaid to PDF Team",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/costajohnt/mermaid-to-pdf-cli.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
