{
  "name": "mermaid-to-pdf",
  "displayName": "Mermaid to PDF",
  "description": "Convert Markdown files with Mermaid diagrams to PDF with embedded images",
  "version": "0.0.1",
  "publisher": "mermaid-pdf-team",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mermaid-to-pdf-vscode"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mermaid-to-pdf.convertToPDF",
        "title": "Convert Markdown to PDF with Mermaid"
      },
      {
        "command": "mermaid-to-pdf.toggleMcpMode",
        "title": "Mermaid to PDF: Toggle MCP Server Mode"
      },
      {
        "command": "mermaid-to-pdf.checkMcpStatus",
        "title": "Mermaid to PDF: Check MCP Server Status"
      }
    ],
    "configuration": {
      "title": "Mermaid to PDF",
      "properties": {
        "mermaidToPdf.useMcpServer": {
          "type": "boolean",
          "default": false,
          "description": "Use MCP server for conversion (requires server to be running)"
        },
        "mermaidToPdf.mcpServerPath": {
          "type": "string",
          "default": "",
          "description": "Path to MCP server executable (leave empty to use default)"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .md",
          "command": "mermaid-to-pdf.convertToPDF",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .md",
          "command": "mermaid-to-pdf.convertToPDF",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/pdfkit": "^0.13.4",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "markdown-it": "^14.0.0",
    "marked": "^11.2.0",
    "pdfkit": "^0.15.0",
    "puppeteer": "^22.8.2",
    "puppeteer-core": "^22.8.2"
  }
}
